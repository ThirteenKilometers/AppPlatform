<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/email_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/email_top" >

        <ImageButton
            android:id="@+id/title_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/title_receive"
            android:textColor="#000000" >
        </ImageButton>

        <ImageButton
            android:id="@+id/title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/title_home"
            android:textColor="#000000" >
        </ImageButton>
    </RelativeLayout>

    <ListView
        android:id="@+id/receive_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/foot"
        android:layout_below="@id/email_title"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/line_dot"
        android:fadingEdge="none"
        android:fadingEdgeLength="0.0sp"
        android:fastScrollEnabled="false"
        android:focusableInTouchMode="false"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/foot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/foot_bg" >
		<ImageButton
            android:id="@+id/email_logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:src="@drawable/email_logout_press" />
        <ImageButton
            android:id="@+id/email_write_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="#00000000"
            android:src="@drawable/write_press" />
    </RelativeLayout>

</RelativeLayout>