<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_size"
        android:gravity="center"
        android:text="@string/login_title"
        android:textColor="@color/default_text_color"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp">

        <EditText
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/ic_phone_login"
            android:drawablePadding="18dp"
            android:hint="@string/login_hint_phone"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#735858"
            android:textColorHint="#998282"
            android:textSize="14sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_password_login"
                android:drawablePadding="18dp"
                android:hint="@string/login_hint_auth_code"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textColor="#735858"
                android:textColorHint="#998282"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/image_auth_code"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#e2e2e2"/>

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/MyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pwLl"
            android:layout_gravity="center_vertical"
            android:capitalize="words"
            android:checkMark="@drawable/remember_check"
            android:checked="false"
            android:clickable="false"
            android:text="@string/remember_password"
            android:textSize="@dimen/edittext_size"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_sure_button_background"
            android:singleLine="false"
            android:text="@string/login_btn"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button_register_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:padding="8dp"
            android:singleLine="false"
            android:text="@string/register_button_text"
            android:textColor="#fb3b2c"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/button_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:padding="8dp"
            android:singleLine="false"
            android:text="功能测试"
            android:textColor="#fb3b2c"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/versiontext_magin_versionimg"
            android:text="@string/version_text"
            android:textColor="#adadad"
            android:textSize="@dimen/versiontext_size"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/versiontext_magin_versionimg"
            android:text=""
            android:textColor="#adadad"
            android:textSize="@dimen/versiontext_size"/>
    </LinearLayout>
</LinearLayout>
