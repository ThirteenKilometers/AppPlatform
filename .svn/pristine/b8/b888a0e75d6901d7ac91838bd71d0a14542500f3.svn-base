<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="立即锁屏"/>
            <TextView
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="解锁屏幕（清除密码）"/>
            <TextView
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="设置屏幕密码为123456"/>
            <TextView
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="禁用相机"/>
            <TextView
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="开启相机"/>
            <TextView
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="恢复出厂设置(清除所有数据)"/>
            <TextView
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="应用date数据区加密"/>
            <TextView
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="应用date数据区加密关闭"/>
            <TextView
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="隐藏外勤"/>
            <TextView
                android:id="@+id/btn_10"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="禁用蓝牙"/>
            <TextView
                android:id="@+id/btn_11"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="禁用蓝牙取消"/>
            <TextView
                android:id="@+id/btn_12"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:background="@drawable/common_btn_green"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="应用锁"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
