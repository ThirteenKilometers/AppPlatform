<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="156px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/FileImage"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_gravity="center"
            android:layout_margin="32px"
            android:src="@color/action_bar_text_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/RelativeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxEms="18"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textSize="32px"
                        tools:text="测试文件" />

                    <TextView
                        android:id="@+id/fileDate"
                        android:layout_width="wrap_content"
                        android:layout_height="32px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="33px"
                        android:gravity="center"
                        android:textColor="#BFBFBF"
                        android:textSize="18px"
                        tools:text="上传时间" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/FileDescribetion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RelativeName"
                    android:layout_marginRight="33px"
                    android:layout_marginTop="19px"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#9A9A9A"
                    android:textSize="25px"
                    tools:text="在该作品初期草稿对我们构思起了很关键hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#F2F2F2"

                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>