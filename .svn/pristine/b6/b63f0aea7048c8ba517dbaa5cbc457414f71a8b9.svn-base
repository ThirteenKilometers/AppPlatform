<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yw.platform.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_size"
        android:layout_marginBottom="@dimen/content_top_bar_distance">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_bar_margin_left"
            android:onClick="onback"
            android:padding="@dimen/top_bar_icon_padding"
            android:src="@drawable/ic_btn_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_register"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/top_bar_text_size"/>

        <View
            style="@style/under_divider_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/text_company"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:drawableLeft="@drawable/ic_company_login"
            android:drawablePadding="18dp"
            android:gravity="center_vertical"
            android:hint="@string/login_hint_company"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#735858"
            android:textColorHint="#998282"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#e6e6e6"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:drawableLeft="@drawable/ic_name_login"
            android:drawablePadding="18dp"
            android:hint="@string/login_hint_name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#735858"
            android:textColorHint="#998282"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#e6e6e6"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:drawableLeft="@drawable/ic_phone_login"
            android:drawablePadding="18dp"
            android:hint="@string/login_hint_phone"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#735858"
            android:textColorHint="#998282"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#e6e6e6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_auth_code"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_password_login"
                android:drawablePadding="18dp"
                android:hint="@string/login_hint_auth_code"
                android:inputType="number"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="#735858"
                android:textColorHint="#998282"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#fb3b2c"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#e6e6e6"/>

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_sure_button_background"
            android:text="@string/register_button"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>
